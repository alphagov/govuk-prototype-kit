{% extends "views/manage-prototype/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block beforeContent %}

  {{ govukBackLink({
    href: "/manage-prototype/plugins",
    text: 'Plugins'
  })}}

{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l govuk-!-margin-bottom-2">
        {{ plugin.name }}
      </h1>
      <div class="govuk-body">
        By {{ plugin.scope }}
      </div>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <div class="govuk-body">
        v{{ plugin.latestVersion }}
      </div>
      <div>
        {{ govukButton({
          'text': 'Install',
          'id': 'plugin-action-button',
          'attributes':{
            'data-mode': 'install'
          }
        })}}
        <div id="panel-processing" hidden>
          Processing ...
        </div>
      </div>

      {% if plugin.links.documentation %}
        <div>
          <a href="{{ plugin.links.documentation }}" class="govuk-link govuk-body">
            Documentation
          </a>
        </div>
      {% endif %}

      {% if plugin.links.support %}
        <div>
          <a href="{{ plugin.links.support }}" class="govuk-link govuk-body">
            Support
          </a>
        </div>
      {% endif %}

      <div>
        <a href="#" class="govuk-link govuk-body">
          Release notes
        </a>
      </div>
      <div>
        <a href="#" class="govuk-link govuk-body">
          Version history
        </a>
      </div>
      <div>
        <a href="#" class="govuk-link govuk-body">
          Report
        </a>
      </div>
    </div>
    <div class="govuk-grid-column-three-quarters">
      <img src="/plugin-assets/govuk-prototype-kit/lib/assets/images/plugins/{{ plugin.image }}" alt="" width="100%" height="300px" class="govuk-!-margin-bottom-4">
      <div class="govuk-body">
        {{ plugin.summary }}
      </div>
    </div>
  </div>

{% endblock %}

{% block pageScripts %}
  <script>
    if (window.Promise) {
      // Dynamically load and execute the script
      const managePluginsScript = document.createElement('script')
      managePluginsScript.addEventListener('load', () => {
        window.GOVUKPrototypeKit.documentReady(window.GOVUKPrototypeKit.internal.managePlugins.init)
      })
      managePluginsScript.setAttribute('src', '/plugin-assets/govuk-prototype-kit/lib/assets/javascripts/manage-prototype/manage-plugins.js')
      document.body.appendChild(managePluginsScript)
    } else {
      // Display the page as if javascript was not enabled
      document.body.classList.remove('js-enabled')
    }
  </script>
{% endblock %}