{% extends "govuk-prototype-kit/internal/views/manage-prototype/layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  
  <h1 class="govuk-heading-l">Create new page from template</h1>

  <p class="govuk-body">Using template "{{ templateName }}".</p>
  
  <form action="{{ currentUrl }}" method="post">

    {{ govukInput({
      hint: {
        text: "For example /my-useful-page"
      },
      label: {
        text: "Path for the new page",

        classes: "govuk-label--m"
      },
      id: "chosen-url",
      name: "chosen-url"
    }) }}

    {{ govukButton({
      text: "Create page"
    }) }}
  </form>

{% endblock %}
