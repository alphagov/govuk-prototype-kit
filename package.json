{
  "name": "@nowprototypeit/govuk",
  "description": "A High Fidelity prototype kit for UK Government",
  "version": "0.0.1",
  "engines": {
    "node": "^16.x || ^18.x || >= 20.x"
  },
  "main": "index.js",
  "bin": {
    "@nowprototyeit/govuk": "bin/cli",
    "now-prototype-it-govuk": "bin/cli"
  },
  "files": [
    "bin/",
    "lib/",
    "migrator/",
    "prototype-starter/",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENCE.txt",
    "README.md",
    "nowprototypeit.config.json",
    "known-plugins.json",
    "index.js",
    "listen-on-port.js",
    "server.js",
    "start.js"
  ],
  "scripts": {
    "clean-publish": "clean-publish --before-script scripts/clean-publish-before-script.sh",
    "prepublishOnly": "echo '***\nUse `npm run clean-publish` to publish @now-prototype-it/govuk\n***' && exit 1",
    "tmp-kit": "mkdir -p $TMPDIR/now-prototype-it-govuk-playground && cd $TMPDIR/now-prototype-it-govuk-playground && rm -Rf ./* && now-prototype-it-govukx create --version local . && npm run dev",
    "start": "echo 'This project cannot be started, in order to test this project please create a prototype kit using the cli.'",
    "lint": "standard . bin/cli scripts/utils/create-release-pr scripts/create-prototype-and-run.js scripts/generate-known-version-hashes.js",
    "lint:fix": "npm run lint -- --fix",
    "test:unit": "jest --detectOpenHandles lib bin",
    "test:acceptance": "npm run test:acceptance:dev && npm run test:acceptance:plugins",
    "test:acceptance:dev": "cucumber-js --tags \"not @plugins\"",
    "test:acceptance:prod": "echo '***\nNot implemented yet\n***' && exit 1",
    "test:acceptance:smoke": "echo '***\nNot implemented yet\n***' && exit 1",
    "test:acceptance:styles": "echo '***\nNot implemented yet\n***' && exit 1",
    "test:acceptance:plugins": "cucumber-js --tags \"@plugins\"",
    "test:acceptance:errors": "echo '***\nNot implemented yet\n***' && exit 1",
    "test:integration": "cross-env CREATE_KIT_TIMEOUT=240000 jest --detectOpenHandles --testTimeout=60000 __tests__",
    "test:full": "npm test && npm run test:acceptance",
    "test": "npm run test:unit && npm run test:integration && npm run lint"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "ansi-colors": "^4.1.3",
    "assert": "^2.1.0",
    "body-parser": "^1.20.2",
    "browser-sync": "^2.29.3",
    "chokidar": "^3.5.3",
    "cookie-parser": "^1.4.6",
    "cross-spawn": "^7.0.3",
    "csrf-csrf": "^2.3.0",
    "del": "^6.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fs-extra": "^11.1.1",
    "govuk-frontend": "5.0.0",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "marked": "^4.3.0",
    "nodemon": "^3.0.1",
    "nunjucks": "^3.2.4",
    "portscanner": "^2.2.0",
    "require-dir": "^1.2.0",
    "sass": "^1.69.5",
    "selenium-webdriver": "^4.16.0",
    "sync-request": "^6.1.0",
    "tar-stream": "^3.1.6",
    "universal-analytics": "^0.5.3",
    "uuid": "^9.0.1",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12",
    "clean-publish": "^4.2.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.3.3",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.4.3",
    "extract-zip": "^2.0.1",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "proper-lockfile": "^4.1.2",
    "standard": "^17.1.0",
    "start-server-and-test": "^2.0.1",
    "supertest": "^6.3.3",
    "wait-on": "^7.0.1"
  },
  "standard": {
    "ignore": [
      "__tests__/fixtures/",
      "prototype-starter/"
    ],
    "plugins": [
      "cypress",
      "jest"
    ],
    "envs": [
      "cypress/globals",
      "jest/globals"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "__tests__/utils/",
      "__tests__/fixtures/",
      "__tests__/tmp/",
      "/node_modules/",
      "/tmp/"
    ],
    "testTimeout": 5000
  }
}
