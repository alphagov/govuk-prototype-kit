#!/bin/bash

getpath() {
    [[ $1 = /* ]] && echo "$1" || echo "$PWD/${1#./}"
}

pathToDependency=$(getpath "$0")

if [[ -L $pathToDependency ]]; then
  pathToDir=$(readlink -f "$pathToDependency")
  pathToCli="$pathToDir-core.js"
else
  pathToCli="$pathToDependency-core.js"
fi

node $pathToCli "$@"
